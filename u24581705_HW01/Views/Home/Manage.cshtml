@{

}

<head>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Manage.js"></script>
</head>
<div class="container-fluid gy-5">
    <div class="row justify-content-center align-items-center text-center">
        <div class="col">
            <i class="fa-solid fa-gear fa-2xl"></i>
            <br />
            <h2 class="fw-bold text-info mt-3 text-center">Driver and Vehicle Management</h2>
        </div>
    </div>
    <div class="container bg-light gy-5 mb-5">
        <div class="row">
            <div class="col">
                <h6 class="text-secondary fs-6">Drivers</h6>
            </div>
            <div class="col-auto">
                <button type="button" class="ms-auto rounded-pill btn btn-info" onclick="window.location.href='@Url.Action("addDriver", "Home")'">Create</button>
            </div>
        </div>
            <form class="d-flex">
                <div class="d-flex flex-wrap align-items-center gap-2 row">
                    <div class="input-group col">
                        <span class="input-group-text bg-white border-end-0">
                          <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="search" class="form-control border-start-0" placeholder="Driver Name" id="driverSearchName"/>
                      </div>

                      <div class="col">
                        <select class="form-select" id="driverSearchService">
                            <option selected>--Select a Option--</option>
                            <option>ALS (Advanced Life Support)</option>
                            <option>BLS (Basic Life Support)</option>
                            <option>Patient Transport</option>
                            <option>Medical Utility Vehicle</option>
                            <option>Event Medical Ambulance</option>
                            <option>Air ambulance</option>
                        </select>
                      </div>
                      
                      <div class="col">
                            <button type="button" class="btn btn-success rounded-pill px-4" onclick="filterDrivers()">Search</button>
                      </div>
                </div>
            </form>

        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col" style="width: 15%;">Image</th>
                        <th scope="col" style="width: 15%;">First Name</th>
                        <th scope="col" style="width: 15%;">Last Name</th>
                        <th scope="col" style="width: 15%;">Phone Number</th>
                        <th scope="col" style="width: 20%;">Service</th>
                        <th scope="col" style="width: 20%;">Controls</th>
                    </tr>
                </thead>
                <tbody id="driver-body">

                </tbody>
            </table>
        </div>
    </div>
    <div class="container bg-light gy-5 mb-5">
        <div class="row">
            <div class="col">
                <h6 class="text-secondary fs-6">Vehicles</h6>
            </div>
            <div class="col-auto">
                <button type="button" class="ms-auto rounded-pill btn btn-info" onclick="window.location.href='@Url.Action("AddVehicle", "Home")'">Create</button>
            </div>
        </div>
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col" style="width: 20%;">Image</th>
                        <th scope="col" style="width: 20%;">Type</th>
                        <th scope="col" style="width: 20%;">Registration</th>
                        <th scope="col" style="width: 20%;">Service</th>
                        <th scope="col" style="width: 20%;">Controls</th>
                    </tr>
                </thead>
                <tbody id="vehicle-body">
                </tbody>
            </table>
        </div>
        <div class="row align-items-end">
            <div col-2>
                <button type="button" class="btn btn-primary rounded-pill px-4" onclick="exportVehicles()">Export</button>
            </div>
            
        </div>
    </div>
</div>


